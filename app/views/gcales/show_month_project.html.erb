<p><%= link_to image_tag(@user.picture), gcales_path, :class => "profileimg" %></p>
<h3><%= @year %>年<%= @month %>月のプロジェクト工数一覧</h3>
<% @tags.each do |tag| %>
<div class="table-responsive">
<table class="table">
  <tr>
    <th colspan="3"><%= tag.description %></th>
  </tr>
  <% @schedules.where(tag_id: tag.id).each do |s| %>
  <tr>
  <td>予定名：　<%= s.summary %></td>
  <td>所用時間：　<%= s.spendtime %>時間</td>
  <td>時間帯：　　<%= s.starttime.strftime('%Y/%m/%d  %H:%M:%S') %>　〜　<%= s.endtime.strftime('%Y/%m/%d  %H:%M:%S') %></td>
  <td><%=link_to "予定名を編集",gcales_edit_schedule_contents_path(:id => s.id),class: 'btn btn-default btn-sm btn btn-primary' %></td>
  </tr>
  <% end %>
  <br>
  <br>
</table>
</div>
<% end %>
